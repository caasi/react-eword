@import '~normalize.css/normalize.css'

html, body, #container, .app
  height 100%

.input-text
  background-color #16161D
  > input
    outline none
    box-sizing border-box
    border 12px solid #16161D
    width 100%
    font-size 24px
    line-height 24px

.row
  padding 4px

.col
  background-color #FFF
  box-sizing border-box
  border 1px solid #A66
  margin 4px

.whole-word
  box-sizing border-box
  border 1px solid #A66

.partial
  position relative

.grid
  position absolute
  box-sizing border-box
  border 1px solid #A66
  &:before, &:after
    position absolute
    content ''
    display block
  &:after
    height 100%
    width 33.3%
    left 33.3%
    top 0
    border-left 1px solid #A66
    border-right 1px solid #A66
  &:before
    width 100%
    height 33.3%
    left 0
    top 33.3%
    border-top 1px solid #A66
    border-bottom 1px solid #A66

.word
  position absolute
  top 0
  left 0

